<% layout("/layouts/boilerplate")%>
<div class="row mt-3">
    <div class="col-8 offset-2">
     <h3>Create New Listing</h3>
    <form method="POST" action="/listings">

        <div class="mb-3">
  <label for="title" class="form-table">Title</label>
  <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required>
</div>

<div class="mb-3">
  <label for="description" class="form-table">Description</label>
  <input name="listing[description]" placeholder="Enter description" type="text" class="form-control" required>
</div>

<div class="mb-3">
  <label for="image" class="form-table">Image Link</label>
  <input name="listing[image][url]" placeholder="Enter image URL/Link" type="text" class="form-control" required>
  <input type="hidden" name="listing[image][filename]" value="listingimage">
</div>

<div class="row">
  <div class="mb-3 col-md-4">
    <label for="price" class="form-table">Price</label>
    <input name="listing[price]" placeholder="1200" type="number" class="form-control" required>
  </div>

  <div class="mb-3 col-md-8">
    <label for="country" class="form-table">Country</label>
    <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
  </div>
</div>

<div class="mb-3">
  <label for="location" class="form-table">Location</label>
  <input name="listing[location]" placeholder="Champaran" type="text" class="form-control" required>
</div>


        <button class="btn btn-dark add-btn mt-3">Add</button>
    </form>
</div>
</div>